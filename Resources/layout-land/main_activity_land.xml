<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000A13"
    tools:context=".MainActivity">

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GetTxtFromSQL"
        android:text="Prijava"
        android:textAllCaps="false"
        android:textColor="#1B3B30"
        android:background="@drawable/button"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="230dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000A13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korisničko ime:"
        android:textColor="#7ED5B3"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="70dp"
        tools:text="Korisničko ime:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="203dp"
        android:layout_marginTop="150dp"
        android:text="Lozinka:"
        android:textColor="#7ED5B3"
        tools:text="Lozinka:" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#1B3B30"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="140dp"/>

    <EditText
        android:id="@+id/korime"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:background="@drawable/edit_text"
        android:gravity="center_horizontal"
        android:ems="10"
        android:textColor="#1B3B30"
        android:layout_alignStart="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="60dp"
        tools:text="#A1CCB1" />

</RelativeLayout>