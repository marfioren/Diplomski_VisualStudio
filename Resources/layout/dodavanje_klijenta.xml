<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="130dp"
    android:colorBackgroundFloating="#EEF2F5">
        <RelativeLayout
        android:id="@+id/spinnerrel"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="40dp"
        android:layout_weight=".28"
        android:background="@drawable/spinner"
        android:gravity="center_horizontal">
         <Spinner
            android:id="@+id/sviKorisnici"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="0dp"
            android:background="#EEF2F5"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/strelica" />
        </RelativeLayout>
        <android.widget.Button
        android:id="@+id/dod"
        android:layout_width="74dp"
        android:layout_height="37dp"
        android:textColor="#000A13"
        android:layout_alignBottom="@+id/spinnerrel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="191dp"
        android:layout_marginLeft="191dp"
        android:layout_marginBottom="-0dp"
        android:gravity="center_horizontal"
        android:text="Dodaj" />
</RelativeLayout>