<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000A13"
    tools:context=".Aktivnosti.KreiranjeDana">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="67dp"
        android:layout_height="42dp"
        android:textColor="#7ED5B3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="Datum:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="65dp"
        android:textColor="#7ED5B3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="49dp"
        android:gravity="center_horizontal"
        android:text="Klijenti:" />

    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:textColor="#1B3B30"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="238dp"
        android:layout_marginLeft="238dp"
        android:gravity="center_horizontal"
        android:text="Promjeni" />

    <TextView
        android:id="@+id/dat"
        android:layout_width="115dp"
        android:textColor="#EEF2F5"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="-90dp"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <android.widget.Button
        android:id="@+id/brisiK"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:textColor="#1B3B30"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="238dp"
        android:layout_marginLeft="238dp"
        android:layout_marginBottom="-8dp"
        android:gravity="center_horizontal"
        android:text="Izbriši" />
    <RelativeLayout
        android:id="@+id/spinnerrel"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="-3dp"
        android:layout_weight=".28"
        android:background="@drawable/spinner"
        android:gravity="center_horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="0dp"
            android:background="#EEF2F5"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/strelica" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView9"
        android:textColor="#7ED5B3"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerrel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="-78dp"
        android:gravity="center_horizontal"
        android:text="Trenutni broj km:" />

    <TextView
        android:id="@+id/kilometri"
        android:layout_width="60dp"
        android:textColor="#EEF2F5"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="213dp"
        android:layout_marginLeft="213dp"
        android:layout_marginTop="126dp"
        android:gravity="center_horizontal"
        android:text="0 km" />

    <android.widget.Button
        android:id="@+id/dodajK"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:textAllCaps="false"
        android:layout_above="@+id/textView9"
        android:textColor="#1B3B30"
        android:background="@drawable/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="-125dp"
        android:layout_marginBottom="-85dp"
        android:gravity="center_horizontal"
        android:text="Dodaj klijenta" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="154dp"
        android:textColor="#7ED5B3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="226dp"
        android:gravity="center_horizontal"
        android:text="Početno stanje brojila:" />
    <EditText
        android:id="@+id/pocetnoS"
        android:layout_width="69dp"
        android:textColor="#EEF2F5"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="226dp"
        android:inputType="textPersonName"
        android:text="0 km" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="154dp"
        android:textColor="#7ED5B3"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="272dp"
        android:gravity="center_horizontal"
        android:text="Završno stanje brojila:" />

    <EditText
        android:id="@+id/zavrsnoS"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:textColor="#EEF2F5"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="226dp"
        android:inputType="textPersonName"
        android:text="0 km" />
</RelativeLayout>
